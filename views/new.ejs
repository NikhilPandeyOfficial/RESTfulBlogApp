<div class="ui main text container segment">
    <div class="ui huge header">Create A New Blog</div>
        <form class="ui form" action="/blogs" method="POST">
            <div class="ui container">
                <div class="field">
                    <label>Title</label>
                    <input type="text" name="blog[name]" placeholder="Title of post">
                </div>
                <div class="field">
                        <label>Image</label>
                        <input type="text" name="blog[image]"placeholder="image">
                </div>
                <div class="field">
                        <label>Write Your Blog</label>
                        <textarea name="blog[body]" placeholder="blog content"></textarea>
                </div>
                <input type="submit" class="ui red basic button">
            </div>
        </form>
</div>


